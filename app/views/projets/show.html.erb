<div class="ui grid">
  <div class="twelve wide column">

    <h2><%= t('projets.visualisation.titre_description_projet') %></h2>
    <div class="ui fluid segment">
      <div class="content">
        <div>Demandeur principal : <%= @projet.usager %></div>
        <div class="meta">Adresse du logement à rénover : <%= @projet.adresse %></div>
        <div class="meta"><%= "Email de contact: #{@projet.email}" if @role_utilisateur == :demandeur %><hr>
        <p><%= @projet.description %></p>
        <%= link_to t('projets.visualisation.lien_edition_projet'), edit_projet_path(@projet), class: "ui primary button" if @role_utilisateur == :demandeur %>
      </div>
    </div>

    <div class="ui fluid card">
      <div class="content">
        <div class="header"><%= t('projets.visualisation.titre_liste_occupants') %></div>
        <div>
          <ul>
            <% @projet.occupants.each do |occupant| %>
              <li>
                <%= occupant %>
                <%= "(#{l(occupant.date_de_naissance)})" %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="extra content">
        <%= link_to t('projets.visualisation.lien_ajout_occupant'), new_projet_occupant_path(@projet), class: "ui primary button" if @role_utilisateur == :demandeur %>
        
      </div>
    </div>

    <% if @projet.intervenants.present? %>
    <h4 class="ui horizontal divider header">Intervenants invités</h4>
    <div class="ui cards invites">
      <% @projet.intervenants.each do |intervenant| %>
        <%= render partial: 'intervenant', locals: {projet: @projet, intervenant: intervenant, avec_appel_a_agir: false} %>
      <% end %>
    </div>
    <% end %>

    <% if @intervenants_disponibles.present? %>
    <h4 class="ui horizontal divider header">Intervenants disponibles</h4>
    <div class="ui cards disponibles">
      <% @intervenants_disponibles.each do |intervenant| %>
        <%= render partial: 'intervenant', locals: {projet: @projet, intervenant: intervenant, avec_appel_a_agir: true} %>
      <% end %>
    </div>
    <% end %>

    <h4 class="ui horizontal divider header">Conversations autour du projet</h4>
    <%= render partial: 'shared/messages_projet' %>

    <h4 class="ui horizontal divider header"><i class="map icon"></i> Carte</h4>
    <div class="ui container eight wide column">
      <div id="mapid"></div>
    </div>
  </div>
  <div class="four wide column">
    <h2><%= t('projets.visualisation.titre_fil_actualite') %></h1>
      <div class="ui feed">
        <% @projet.evenements.each do |evenement| %>
        <div class="event">
          <div class="label">
            <i class="<%= icone_evenement(evenement.label) %> icon"></i>
          </div>
          <div class="content">
            <div class="summary">
              <%= t(evenement.label, scope: 'evenements', intervenant: evenement.intervenant.try(:raison_sociale)) %>
              <div class="date"><%= l(evenement.quand, format: :short) %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
